doctype html
html
head
  title Geekhub
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
body
  - if current_user
    = current_user.email
    = link_to 'Sign Out', session_path, method: :delete, remote: true
  = render 'shared/flashes'
  div class='container'
    .col-md-2
      - Category.all.each do |category|
        p= category.name
    .col-md-10
      = yield
